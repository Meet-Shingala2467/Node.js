<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Blog Here..</title>

    <!-- Bootstrap & Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <style>
      /* üåå Background */
      body {
        background: linear-gradient(135deg, #10172a, #1e293b);
        min-height: 100vh;
        font-family: "Poppins", sans-serif;
        color: white;
      }

      /* üîù Navbar */
      .topbar {
        background: linear-gradient(90deg, #0d47a1, #1976d2);
        height: 65px;
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 30px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
      }

      .topbar .logo {
        font-size: 1.6rem;
        font-weight: 700;
        color: #ffcc00;
        text-transform: uppercase;
      }

      .topbar-nav ul {
        list-style: none;
        display: flex;
        margin: 0;
        padding: 0;
      }

      .topbar-item {
        margin-left: 30px;
      }

      .topbar-link {
        color: white;
        text-decoration: none;
        padding: 12px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 8px;
        display: flex;
        align-items: center;
        transition: all 0.3s ease;
      }

      .topbar-link i {
        margin-right: 10px;
        font-size: 1.3rem;
      }

      .topbar-link:hover {
        background-color: rgba(255, 255, 255, 0.2);
        transform: translateY(-3px);
      }

      /* üèóÔ∏è Blog Section */
      .container {
        max-width: 1100px;
        margin-top: 90px; /* Added margin to adjust for fixed navbar */
        padding: 30px;
      }

      .row {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 25px;
      }

      /* üìå Glassmorphism Blog Card */
      .card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        color: white;
        max-width: 350px;
      }

      .card:hover {
        transform: translateY(-8px) scale(1.05);
        box-shadow: 0 12px 25px rgba(255, 255, 255, 0.3);
      }

      /* üì∏ Blog Image */
      .card img {
        object-fit: cover;
        height: 200px;
        width: 100%;
        border-radius: 15px 15px 0 0;
      }

      /* üè∑Ô∏è Blog Content */
      .card-body {
        padding: 20px;
      }

      .card-title {
        font-size: 1.4rem;
        font-weight: bold;
        color: #ffcc00;
      }

      .card-text {
        font-size: 0.95rem;
        line-height: 1.5;
        color: #ddd;
      }

      .post-date {
        font-size: 0.85rem;
        color: #bbb;
        margin-bottom: 10px;
      }

      /* ‚ú® Buttons */
      .btn {
        font-size: 0.9rem;
        padding: 10px 20px;
        transition: all 0.3s ease;
        border-radius: 8px;
      }

      .btn-primary {
        background: linear-gradient(45deg, #ffcc00, #ff6600);
        color: white;
        font-weight: 700;
        border: none;
      }

      .btn-primary:hover {
        background: linear-gradient(45deg, #ff6600, #ffcc00);
        transform: scale(1.1);
      }

      .btn-danger {
        background: linear-gradient(45deg, #ff4d4d, #cc0000);
        color: white;
        font-weight: 700;
        border: none;
      }

      .btn-danger:hover {
        background: linear-gradient(45deg, #cc0000, #ff4d4d);
        transform: scale(1.1);
      }

      /* üì± Responsive */
      @media (max-width: 768px) {
        .container {
          margin-top: 80px;
          padding: 15px;
        }

        .topbar {
          flex-direction: column;
          align-items: flex-start;
          padding: 15px 20px;
        }

        .topbar-nav ul {
          flex-direction: column;
          align-items: flex-start;
        }

        .topbar-item {
          margin-left: 0;
          margin-bottom: 10px;
        }
      }
    </style>
  </head>

  <body>
    <div id="main-wrapper">
      <!-- üöÄ Top Navigation Bar -->
      <div class="topbar">
        <div class="logo">My Blog</div>
        <nav class="topbar-nav">
          <ul>
            <li class="topbar-item">
              <a class="topbar-link" href="/dashboard">
                <i class="fas fa-home"></i> Home
              </a>
            </li>
            <li class="topbar-item">
              <a class="topbar-link" href="/addblog">
                <i class="fas fa-edit"></i> Create
              </a>
            </li>
            <li class="topbar-item">
              <a class="topbar-link" href="/logout">
                <i class="fas fa-sign-out-alt"></i> Logout
              </a>
            </li>
          </ul>
        </nav>
      </div>

      <!-- üìù Blog Content -->
      <div class="container">
        <div class="row">
          <% blogs.map((blog, i) => { %>
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card">
              <img src="<%= blog.image %>" class="card-img-top" alt="Blog Image" />
              <div class="card-body">
                <h5 class="card-title text-capitalize"><%= blog.title %></h5>
                <p class="post-date">Published on: <%= blog.date %></p>
                <p class="card-text"><%= blog.caption.substring(0, 100) %>...</p>
                <div class="d-flex justify-content-between">
                  <a href="/deleteblog?id=<%= blog._id %>" class="btn btn-danger">Delete</a>
                  <a href="/editblog?id=<%= blog._id %>" class="btn btn-primary">Edit</a>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
